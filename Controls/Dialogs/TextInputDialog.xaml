<Window x:Class="ThaumaStudio.Controls.Dialogs.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThaumaStudio.Controls.Dialogs"
        mc:Ignorable="d"
        Style="{StaticResource ResourceKey=ThaumaStudio.Controls.Dialogs}"
        xmlns:shell="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        Title="TextInputDialog" Height="138" Width="345">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            ResizeBorderThickness="8"
            CaptionHeight="32"
            CornerRadius="0,0,0,0"
            GlassFrameThickness="0">
        </shell:WindowChrome>
    </shell:WindowChrome.WindowChrome>
    <StackPanel>
        <Label>Input</Label>
        <TextBox Name="MainTextBox" Margin="16" Height="28"/>
        <Button HorizontalAlignment="Center" Width="128" Height="32" Click="Button_Click">Accept</Button>
    </StackPanel>
</Window>
